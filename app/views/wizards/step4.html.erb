  <div class="block block-fill-height px-0">

    <%= render 'application/header', logo: 'logo-blue.png' %>

    <div class="container mt-2 pt-5">
      <div class="card card-outline-primary">
        <h3 class="card-header">
          <ul class="nav nav-bordered">
            <li class="nav-item">
              <a class="nav-link" href="#">Basics</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="#">Sale</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Offer</a>
            </li>
          </ul>

        </h3>
        <div class="card-block">
          <h4 class="card-title">Where should we send your offer?</h4>
          <p class="card-text"><strong>Save your progress</strong> and join thousands of home owners who receive an offer from Doug Hopkins every month. </p>
          <hr>

          <h5 class="mt-5">Save progress & receive your offer.</h5>
          <%= link_to 'Continue with Facebook', user_facebook_omniauth_authorize_path, class: 'btn btn-primary btn-lg mt-3' %>
          <hr>

          <h5 class="mt-5">Don't have facebook? Create your account below:</h5>

          <%= simple_form_for User.new, url: '/users', method: 'POST', html: { class:'mt-4' } do |f| %>
            <div class="form-group">
              <%= f.label(:first_name, 'First Name') %>
              <%= f.input_field(:first_name, class: 'form-control', placeholder: 'First Name') %>
            </div>
            <div class="form-group">
              <%= f.label(:last_name, 'Last Name') %>
              <%= f.input_field(:last_name, class: 'form-control', placeholder: 'Last Name') %>
            </div>
            <div class="form-group">
              <%= f.label(:email, 'Email') %>
              <%= f.input_field(:email, class: 'form-control', placeholder: 'Enter your Email') %>
            </div>
            <div class="form-group">
              <%= f.label(:phone, 'Phone') %>
              <%= f.input_field(:phone, class: 'form-control', placeholder: 'Enter your Phone') %>
            </div>
            <div class="form-group">
              <%= f.label(:password, 'Password') %>
              <%= f.input_field(:password, class: 'form-control', placeholder: '6 characters minimum') %>
            </div>
            <hr>
            <%= f.submit 'Next', class: 'btn btn-success btn-lg' %>
          <% end %>

        </div>
      </div>
    </div>

  </div>
