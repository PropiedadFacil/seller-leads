<div class="block block-inverse block-fill-height app-header p-0"
     style="background-image: url(<%= asset_path 'start-header.jpg' %>);">

  <%= render 'application/header', logo: 'logo-white.png', transparent: true %>

  <div class="block-xs-middle pb-5">
    <div class="container">
      <div class="row">
        <div class="col-sm-10 col-lg-6">
          <h1 class="block-titleData frequency">Let's get started</h1>
          <p class="lead mb-4">Please enter your address.
          <%= simple_form_for @lead_wizard, as: :lead_wizard, html: { class: 'form-inline'}, url: validate_step_wizard_path do |f| %>
            <%= hidden_field_tag(:current_step, 'step1') %>
            <div class="form-group pr-2">
              <%= f.label(:address, 'Street, city, state', class:'sr-only') %>
              <%= f.input_field(:address, class: 'form-control', placeholder: 'Ex. 746 E. Main ST, Scottsdale', required: true) %>
            </div>
            <%= f.submit('Find my home', class: 'btn btn-success') %>
          <% end %>
          <!-- <form class="form-inline" action="<%= validate_step_wizard_path %>" method="POST">
            <div class="form-group pr-2">

              <label for="address" class="sr-only">Street, city, state</label>
              <input type="text" class="form-control" name="address" id="address" placeholder="Ex. 746 E. Main...">
            </div>
            <button type="submit" class="btn btn-success">Find my home</button>
          </form> -->
        </div>
      </div>
    </div>
  </div>
</div>
